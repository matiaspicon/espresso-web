@model proyecto_final_webconfig.Models.Entities.Event

@{
    ViewData["Title"] = "View";
}

<h1>Detalle de evento</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            IP de origen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IpSource)
        </dd>
        <dt class = "col-sm-4">
            Dirección MAC de origen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MacSource)
        </dd>
        <dt class = "col-sm-4">
            Nombre de dispositivo de origen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OuiSource)
        </dd>
        <dt class = "col-sm-4">
            IP de destino
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IpDestination)
        </dd>
        <dt class = "col-sm-4">
            MAC de destino
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MacDestination)
        </dd>
        <dt class = "col-sm-4">
            Nombre de dispositivo de destino
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OuiDestination)
        </dd>
        <dt class = "col-sm-4">
            Tipo de ataque
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeDetection)
        </dd>
        <dt class = "col-sm-4">
            Cantidad de paquetes detectados
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantPacketsDetect)
        </dd>
        <dt class = "col-sm-4">
            Hora de detección
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Timestamp)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-primary"><i class="bi bi-arrow-left"></i> Volver a la lista</a>
</div>
