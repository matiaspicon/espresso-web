@model IEnumerable<proyecto_final_webconfig.Models.Entities.Event>

@{
    ViewData["Title"] = "View";
}

<h1>Registro de eventos</h1>

<table id="miTabla" class="table  table-striped table-hover">
    <thead class="table-primary">
        <tr>
            @*  <th>
                 @Html.DisplayNameFor(model => model.IpSource)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.MacSource)
             </th> *@
            <th>
                Dispositivo origen
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.IpDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MacDestination)
            </th> *@
            <th>
                Dispositivo destino
            </th>
            <th>
                Tipo de ataque
            </th>
            <th>
                Tamaño de ataque
            </th>
            <th>
                Hora de detección
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @* <td>
                @Html.DisplayFor(modelItem => item.IpSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MacSource)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.OuiSource)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.IpDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MacDestination)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.OuiDestination)
            </td>
            <td> 
                @Html.DisplayFor(modelItem => item.TypeDetection) <btn class="btn"><i class="bi bi-question-circle"></i></btn>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantPacketsDetect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Ver detalle</a> 
            </td>
        </tr>
}
    </tbody>
</table>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#miTabla').DataTable();
        });
    </script>

}