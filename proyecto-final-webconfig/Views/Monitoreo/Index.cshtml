@model IEnumerable<proyecto_final_webconfig.Models.Entities.Event>

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="miTabla" class="table  table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IpSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MacSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OuiSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IpDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MacDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OuiDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeDetection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantPacketsDetect)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IpSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MacSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OuiSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MacDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OuiDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeDetection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantPacketsDetect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#miTabla').DataTable();
        });
    </script>

}