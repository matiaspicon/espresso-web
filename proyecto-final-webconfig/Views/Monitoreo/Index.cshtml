@model IEnumerable<proyecto_final_webconfig.Models.Entities.Event>

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IpSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MacSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IpDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MacDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeDetection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantPacketsDetect)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IpSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MacSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MacDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeDetection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantPacketsDetect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
