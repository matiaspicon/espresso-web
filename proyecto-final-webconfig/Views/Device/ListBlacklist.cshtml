@model IEnumerable<proyecto_final_webconfig.Models.Entities.DeviceBlacklist>

@{
    ViewData["Title"] = "View";
}

<h1>Registro de dispositivos</h1>

<table id="miTabla" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Dirección MAC
            </th>
            <th>
                Nombre del dispositivo
            </th>
            <th>
                Eventos detectados
            </th>
            <th>
                Último evento registrado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MacSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventsDetected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimestampOfBan)
            </td>
            <td >
                <a asp-controller="Monitoreo" asp-action="ListByDevice" asp-route-mac="@item.MacSource" class="btn btn-info"> <i class="bi bi-exclamation-triangle"></i> Eventos asociados</a>
                <a asp-action="MoveToBlacklist" asp-route-id="@item.Id" class="btn btn-danger"> <i class="bi bi-dash-circle"></i> Agregar a lista negra</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

}

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#miTabla').DataTable();
        });
    </script>

}
